<div class="col-lg-4"></div>
<div class="container col-lg-3">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form-signin") do |f| %>
  <%= devise_error_messages! %>

    <%= f.label :email , class: "sr-only"%><br />
    <%= f.email_field :email, autofocus: true , class: "form-control" , placeholder: "Email Address"%><br>

    <%= f.submit "Send me reset password instructions" ,class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
</div>